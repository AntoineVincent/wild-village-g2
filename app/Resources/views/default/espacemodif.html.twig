{% extends 'base.html.twig' %}


{% block body %}
<div class="col-md-12 ent_espace"><h3><b>{{ app.user.username }}</b>, vous pouvez modifier vos informations ici.</h3></div>
<div class="col-md-12">
	<div class="col-md-3 img1"><img src="{{ asset('img/chausson1.png') }}"></div>
	<div class="col-md-6 form_espace">
		<form action="{{ path("user_espacemodif") }}" method="post" class="espace_modif">
			<div class="col-md-12">
				<label for="username">Pseudo :</label>
				<input type="text" id="username" name="username" value="{{ app.user.username }}"/>
			</div>
			<div class="col-md-12">
				<label for="nom">Nom :</label>
				<input type="string" id="nom" name="nom" value="{{ requete_infos.nom }}"/>
			</div>
			<div class="col-md-12">
				<label for="prenom">Prenom :</label>
				<input type="string" id="prenom" name="prenom" value="{{ requete_infos.prenom }}"/>
			</div>
			<div class="col-md-12">
				<label for="genre">Genre :</label>
				<select name="genre" id="genre">
					{% if requete_infos.genre == "homme" %}
 		        		<option selected value="homme">Homme</option>
 		         		<option value="femme">Femme</option>
 		         	{% else %}
 		        		<option value="homme">Homme</option>
 		         		<option selected value="femme">Femme</option>
 		         	l{% endif %}
       			</select>
			</div>
			<div class="col-md-12">
				<label for="age">Age :</label>
				<input type="integer" id="age" name="age" value="{{ requete_infos.age }}"/>
			</div>
			<div class="col-md-12">
				<label for="email">Email :</label>
				<input type="string" id="email" name="email" value="{{ app.user.email }}"/>
			</div>
			<div class="col-md-12">
				<label for="biographie" class="labelbio">Biographie :</label>
				<textarea id="biographie" name="biographie">{{ requete_infos.biographie }}</textarea>
			</div><br>
			<div class="col-md-12">
				<label for="site">Site personnel :</label>
				<input type="string" id="site" name="site" value="{{ requete_infos.site }}"/>
			</div>
			<div class="col-md-12">
				<label for="github">Github :</label>
				<input type="string" id="github" name="github" value="{{ requete_infos.github }}"/>
			</div>
			<div class="col-md-12">
				<label for="linkedin">Linkedin :</label>
				<input type="string" id="linkedin" name="linkedin" value="{{ requete_infos.linkedin }}"/>
			</div>
			<div class="col-md-12">
				<label for="tweeter">Tweeter :</label>
				<input type="string" id="tweeter" name="tweeter" value="{{ requete_infos.tweeter }}"/>
			</div>
			<div class="col-md-12">
				<label for="doyoubuzz">Doyoubuzz :</label>
				<input type="string" id="doyoubuzz" name="doyoubuzz" value="{{ requete_infos.doyoubuzz }}"/>
			</div>
			<div class="col-md-12">
				<input type="hidden" name="hidden" value="1"/>
			</div>
			<div class="col-md-12">
				<input type="submit" class="btnlogin" id="_submit" name="submit" value="Envoyer" />
			</div>
			<div class="col-md-12 return">
				<a href="{{ path ("user_espace") }}">Retour</a>
			</div>
		</form>
	</div>
	<div class="col-md-3 img2"><img src="{{ asset('img/chausson2.png') }}"></div>	
</div>
{% endblock %}