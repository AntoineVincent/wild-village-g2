{% extends 'base.html.twig' %}

{% block body %}
    <h3 class="entetesup">Vous êtes sur le point de supprimer définitivement le message suivant:</h3></br>
    
    <div class="col-md-6 suppressionform">
        <ul class="deletemessage mla">
            <h4>Message de <b>{{ message.usersent }}</b> à <b>{{ message.userdest }}</b> - le {{ message.date|date('Y-m-d H:i:s') }}</h4>
            <hr style="border-color:#3d3d3d;">
            <p class="contentmesssupr">{{ message.content }}</p>
        </ul>
        <ul class="deletemessage">
            <li>
                {{ form_start(delete_form) }} <input class="btndelmess" type="submit" value="Confirmer la suppression"> {{ form_end(delete_form) }}
            </li>
            <br/>
            <li>
                <a class="btndelmess" href="{{ path('mess_mess') }}">Ne pas supprimer et revenir à la messagerie</a>
            </li>
        </ul>
    </div>
    <div class="col-md-6 suppressionimage">
        <img src="{{ asset('img/suppression.png') }}">
    </div>

{% endblock %}